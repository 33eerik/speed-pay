modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Flask Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Push to GitHub"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GitHub Push"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GitHub Sync and Push"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GitHub Sync and Push (Resolved)"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GitHub Sync and Push (Final)"

[[workflows.workflow]]
name = "Start Flask Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Push to GitHub"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    git config --global user.email \"you@example.com\"
    git config --global user.name \"Your Name\"
    git remote set-url origin https://${GITHUB_TOKEN}@github.com/33eerik/speed-pay.git
    git push -u origin main
    """

[[workflows.workflow]]
name = "GitHub Push"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    git config --global user.email \"you@example.com\"
    git config --global user.name \"Your Name\"
    git add .
    git commit -m \"Push project to GitHub\"
    git remote set-url origin https://$GITHUB_TOKEN@github.com/33eerik/speed-pay.git
    git push -u origin main
    """

[[workflows.workflow]]
name = "GitHub Sync and Push"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    git fetch origin
    git merge origin/main --allow-unrelated-histories
    git push -u origin main
    """

[[workflows.workflow]]
name = "GitHub Sync and Push (Resolved)"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    git merge --abort
    git fetch origin
    git merge origin/main --strategy-option theirs
    git push -u origin main
    """

[[workflows.workflow]]
name = "GitHub Sync and Push (Final)"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """

    git fetch origin
    git merge origin/main --allow-unrelated-histories
    git add .
    git commit -m \"Merge remote changes and push project to GitHub\"
    git push -u origin main
    """

[deployment]
run = ["sh", "-c", "python main.py"]

[[ports]]
localPort = 5000
externalPort = 80
